---
import { Card, CardContent, CardHeader } from "./ui/card"

interface Props {
  title: string
  description: string
}
---

<Card
  className="w-full h-full transition duration-300 group-hover:shadow-black/5 dark:group-hover:shadow-white/5 group-hover:shadow-xl group-hover:border-black/80 dark:group-hover:border-white/80 mb-6"
>
  <CardHeader className="pb-2 md:pb-4">
    <h3 class="text-lg md:text-xl font-bold">{Astro.props.title}</h3>
  </CardHeader>
  <CardContent>
    <p class="text-muted-foreground">{Astro.props.description}</p>
  </CardContent>
</Card>
